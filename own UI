HubName.BorderSizePixel = 0
HubName.Position = UDim2.new(0, 0, 0.024324324, 0)
HubName.Size = UDim2.new(0, 140, 0, 21)
	HubName.Font = Enum.Font.Gotham
	HubName.Text = xHubName
HubName.TextColor3 = Color3.fromRGB(0, 255, 255)
